<h3>Editando Categoria/slug</h3>

<div class="card mt-4">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="POST">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input class="form-control" type="text" id="nome" name="nome" placeholder="" value="{{update.nome}}">
            </div>
            <div class="form-group">
                <label for="slug">Slug:</label>
                <input class="form-control" type="text" name="slug" id="slug" placeholder="" value="{{update.slug}}">
                <br>
            </div>
              <div class="form-group">
                <label for="slug">id:</label>
                <input class="form-control" type="text" name="id" id="id" placeholder="" value="{{update._id}}" >
                <br>
            </div>
            <button type="submit" class="btn btn-success">Salvar</button>
        </form>
    </div>
</div>
